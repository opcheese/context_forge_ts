---
interface Props {
  title: string
  description: string
  canonical?: string
  ogImage?: string
  ogType?: string
  publishedAt?: Date
  updatedAt?: Date
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = "/og-default.png",
  ogType = "website",
  publishedAt,
  updatedAt,
} = Astro.props

const ogImageUrl = new URL(ogImage, Astro.site).href
---

<link rel="canonical" href={canonical} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonical} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:site_name" content="ContextForge" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

{publishedAt && <meta property="article:published_time" content={publishedAt.toISOString()} />}
{updatedAt && <meta property="article:modified_time" content={updatedAt.toISOString()} />}
