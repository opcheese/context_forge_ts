{
  "name": "contextforge",
  "version": "0.1.0",
  "description": "Context window management for LLM interactions with three-zone architecture, multi-provider support, and workflow automation",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "llm",
    "context-management",
    "ai",
    "claude",
    "ollama",
    "openrouter",
    "convex",
    "react",
    "workflow"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opcheese/context_forge_ts.git"
  },
  "homepage": "https://github.com/opcheese/context_forge_ts#readme",
  "bugs": {
    "url": "https://github.com/opcheese/context_forge_ts/issues"
  },
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently -n spa,site,convex -c blue,green,yellow \"vite\" \"cd site && pnpm dev\" \"npx convex dev\"",
    "build": "vite build",
    "build:all": "vite build && cd site && pnpm build",
    "typecheck": "tsc -b",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite build && cd site && pnpm build && npx serve dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@anthropic-ai/claude-agent-sdk": "^0.2.9",
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-router": "^1.150.0",
    "ai": "^6.0.39",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.34.2",
    "js-tiktoken": "^1.0.21",
    "js-yaml": "^4.1.1",
    "jszip": "^3.10.1",
    "langfuse": "^3.38.6",
    "lucide-react": "^0.562.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-devtools": "^1.150.0",
    "@tanstack/router-plugin": "^1.150.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/jszip": "^3.4.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.17"
  }
}
